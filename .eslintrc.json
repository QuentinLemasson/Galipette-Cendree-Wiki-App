{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["db/**/*"],
      "rules": {
        "@typescript-eslint/no-require-imports": "off"
      }
    }
  ]
}
